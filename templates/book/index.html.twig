{% extends 'base.html.twig' %}

{% block title %}Liste des livres disponibles{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <h1 class="mb-4 text-center">üìö Liste des livres</h1>
</div>

<div class="card shadow-sm bg-white">
    <div class="card-body">

        <div class="text-end mb-3">
            <a href="{{ path('app_book_new') }}" class="btn btn-primary">‚ûï Ajouter un livre</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date de publication</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td>{{ book.id }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.author }}</td>
                            <td>{{ book.dateOfPublication|date('d/m/Y') }}</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-sm btn-outline-info">üëÅ Voir</a>
                                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-outline-warning">‚úèÔ∏è Modifier</a>
                                    {{ include('book/_delete_form.html.twig', {'book': book}) }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-muted">Aucun livre trouv\u00e9.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
</div>
{% endblock %}
