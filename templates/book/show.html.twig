{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ book.dateOfPublication ? book.dateOfPublication|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">Retour</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
